% アブストラクト関連
%------------------------------------------------------------------------
\newif\if@abstexists % アブストラクト(和文)が定義されたか
\@abstexistsfalse
\newif\if@abstEexists % アブストラクト(英文)が定義されたか
\@abstEexistsfalse

%アブスト定義
\newcommand{\abst}[1]{
  \newcommand{\@abst}{#1}
  \makeatletter
  \@abstexiststrue
  \makeatother
}
\newcommand{\abstE}[1]{
  \newcommand{\@abstE}{#1}
  \makeatletter
  \@abstEexiststrue
  \makeatother
}


%所属
\newcommand{\@affiliation}{}
\newcommand{\affiliation}[1]{\renewcommand*{\@affiliation}{#1}}
\newcommand{\@affiliationE}{}
\newcommand{\affiliationE}[1]{\renewcommand*{\@affiliationE}{#1}}

%英文タイトル
\newcommand{\@titleE}{}
\newcommand{\titleE}[1]{\renewcommand*{\@titleE}{#1}}

%英文著者名
\newcommand{\@authorE}{}
\newcommand{\authorE}[1]{\renewcommand*{\@authorE}{#1}}

%タイトル再定義
\renewcommand\@maketitle{%
  \newpage\null
%\begin{flushright} \today \end{flushright}
  \begin{center}%
    \let\footnote\thanks
    \vskip -3em%
    %和文
    {\LARGE \@title \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
    \vskip 1em%
    {\@affiliation}%和文所属
    \vskip 1.5em%
    \if@abstexists
      {\bf 概要}
      \vskip .5em%
      \begin{quote}
      {\@abst}
      \end{quote}
    \fi

    %英文
    {\LARGE \@titleE \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@authorE
      \end{tabular}\par}%
    \vskip 1em%
    {\@affiliationE}%和文所属
    \vskip 1.5em%
    \if@abstexists
      {\bf Abstract}
      \vskip .5em%
      \begin{quote}
      {\@abstE}
      \end{quote}
    \fi
  \end{center}
  \hrulefill
  \par\vskip 1em%
}

%タイトル部分をtwocolumnに対応する
\renewcommand{\maketitle}{
  \if@twocolumn
    \twocolumn[\@maketitle]
  \else
    \@maketitle
  \fi
}

